<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:background="@drawable/bg_books_item">

        <FrameLayout
            android:layout_width="@dimen/dimen50"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/dimen36"
                android:layout_height="@dimen/dimen36"
                android:layout_gravity="center"
                android:src="@mipmap/icon_filedir"/>

            <com.ysbd.beijing.view.CircleImageView
                android:id="@+id/civ"
                android:layout_width="@dimen/dimen36"
                android:layout_height="@dimen/dimen36"
                android:layout_gravity="center"
                android:src="@mipmap/small_blue"/>

            <TextView
                android:id="@+id/tvExtension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="@dimen/dimen14"
                android:textStyle="bold" />

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:gravity="center|left"
                android:text="收入直呼的话.docx"
                android:textColor="#333"
                android:textSize="@dimen/dimen16" />
            <LinearLayout
                android:id="@+id/llDir"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDir"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dimen4"
                    android:gravity="center|left"
                    android:textSize="@dimen/dimen14"
                    android:text="收入"
                    />
                <TextView
                    android:id="@+id/tvCate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dimen4"
                    android:gravity="center|right"
                    android:textSize="@dimen/dimen14"
                    android:text="收入"
                    />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>