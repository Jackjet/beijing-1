<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:padding="@dimen/dimen8">

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen8"
                android:text="取消"
                android:textColor="@color/text1"
                android:textSize="@dimen/dimen15" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="请选择时间"
                android:textColor="@color/text1"
                android:textSize="@dimen/dimen15" />

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen8"
                android:text="确定"
                android:textColor="@color/text1"
                android:textSize="@dimen/dimen15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1"
            android:background="@color/split_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen4"
                android:background="#f7f7f7"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen8"
                android:paddingLeft="@dimen/dimen8"
                android:paddingRight="@dimen/dimen8"
                android:paddingTop="@dimen/dimen8">

                <com.ysbd.beijing.view.DatePickerView
                    android:id="@+id/year_pv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen140"
                    android:layout_weight="3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="年"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/dimen14" />

               <com.ysbd.beijing.view.DatePickerView
                    android:id="@+id/month_pv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen140"
                    android:layout_weight="2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="月"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/dimen14" />

               <com.ysbd.beijing.view.DatePickerView
                    android:id="@+id/day_pv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen140"
                    android:layout_weight="2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="日"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/dimen14" />

               <com.ysbd.beijing.view.DatePickerView
                    android:id="@+id/hour_pv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen140"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/hour_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/dimen14" />


                <com.ysbd.beijing.view.DatePickerView
                    android:id="@+id/minute_pv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen140"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/minute_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="分"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/dimen14" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>