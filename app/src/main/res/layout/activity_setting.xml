<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ysbd.beijing.ui.activity.SettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:background="@color/colorPrimaryDark">
        <FrameLayout
            android:id="@+id/fl_back"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/dimen40"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"
                android:src="@mipmap/back"/>
        </FrameLayout>

        <TextView
            android:layout_toRightOf="@id/fl_back"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/tvTitleWhite"
            android:textSize="@dimen/dimen16"
            android:gravity="center"
            android:text="修改密码"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ddddff"
            android:textSize="@dimen/dimen15"
            android:gravity="center"
            android:text="吴素芬"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="@dimen/dimen18"
            android:gravity="center"
            android:text="用户登录"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginRight="@dimen/dimen100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="输入原密码："
                android:textSize="@dimen/dimen15"
                android:textColor="@color/textColor"
                android:gravity="center"/>
            <EditText
                android:hint="请输入原密码"
                android:id="@+id/et_original"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/bg_login_input"
                android:textSize="@dimen/dimen15"
                android:padding="4dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginRight="@dimen/dimen100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="输入新密码："
                android:textSize="@dimen/dimen15"
                android:textColor="@color/textColor"
                android:gravity="center"/>
            <EditText
                android:hint="密码长度8-12位,必须有大小写字母和数字"
                android:id="@+id/et_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login_input"
                android:textSize="@dimen/dimen15"
                android:padding="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginRight="@dimen/dimen100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确认新密码："
                android:textSize="@dimen/dimen15"
                android:textColor="@color/textColor"
                android:gravity="center"/>
            <EditText
                android:hint="请再次输入新密码"
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/bg_login_input"
                android:textSize="@dimen/dimen15"
                android:padding="4dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen40"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <Button
                android:id="@+id/bt_login"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen30"
                android:layout_weight="1"
                android:text="确认"
                android:layout_marginRight="12dp"
                android:textColor="#fff"
                android:background="@color/holo_green_dark"/>
            <Button
                android:id="@+id/bt_reset"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen30"
                android:layout_weight="1"
                android:background="#c0c0c0"
                android:textColor="#fff"
                android:text="重置"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_helper"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen8"
            android:paddingRight="@dimen/dimen12"
            android:paddingTop="@dimen/dimen12"
            android:paddingBottom="@dimen/dimen12"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen18"
                android:textColor="#000"
                android:text="帮助说明"
                android:layout_marginLeft="@dimen/dimen8"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen15"
                android:textColor="#000"
                android:text="  -密码长度为8-12位"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen15"
                android:textColor="#000"
                android:text="  -密码必须包含大小写字母和数字"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
