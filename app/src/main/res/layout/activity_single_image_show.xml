<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".utils.selectPhoto.SingleImageShowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:background="@color/mainColor">

        <ImageView
            android:id="@+id/singleBackViewer"
            android:layout_width="@dimen/dimen15"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen12"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="选择图片"
            android:textColor="#ffffff"
            android:textSize="@dimen/dimen17" />

        <LinearLayout
            android:id="@+id/singleSelectViewer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/singleSelectorViewer"
                android:layout_width="@dimen/dimen25"
                android:layout_height="@dimen/dimen25"
                android:layout_marginRight="@dimen/dimen15"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/singleShowViewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/singleBottomViewer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen50"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/singleOKViewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen15"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="@dimen/dimen16" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
