<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">

    <com.ysbd.beijing.view.SwipeMenuLayout
        android:id="@+id/smlContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:clickable="true"
        app:ios="false"
        app:leftSwipe="true"
        app:swipeEnable="false">
        <LinearLayout
            android:id="@+id/p"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen30"
            android:layout_marginLeft="@dimen/dimen4"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/dimen5"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen4"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen16" />
            <TextView
                android:id="@+id/tvMore"
                android:textSize="@dimen/dimen15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dimen8"
                android:paddingRight="@dimen/dimen8"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="@color/rhmo_blue"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvIndex"
                android:textSize="@dimen/dimen15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dimen8"
                android:paddingRight="@dimen/dimen8"
                android:gravity="center_vertical"
                android:textColor="@color/rhmo_blue"
                android:text="序号：1"/>
            <View
                android:layout_width="@dimen/dimen1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen4"
                android:layout_marginBottom="@dimen/dimen4"
                android:background="#ccc"/>
            <TextView
                android:id="@+id/tvCount"
                android:textSize="@dimen/dimen15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dimen8"
                android:paddingRight="@dimen/dimen8"
                android:gravity="center_vertical"
                android:textColor="@color/rhmo_blue"
                android:text="行数：3"/>
        </LinearLayout>
    </com.ysbd.beijing.view.SwipeMenuLayout>

    <LinearLayout
        android:id="@+id/c"
        android:padding="@dimen/dimen3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llC1"
            android:layout_marginLeft="@dimen/dimen4"
            android:layout_marginRight="@dimen/dimen4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_strok"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="@dimen/dimen16"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivC1"
                    android:layout_width="@dimen/dimen12"
                    android:layout_height="@dimen/dimen12"
                    android:src="@mipmap/triangle"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tvC1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen15"
                android:textColor="#333"
                android:singleLine="true"
                android:text=""
                android:padding="@dimen/dimen4"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llC2"
            android:layout_marginLeft="@dimen/dimen4"
            android:layout_marginRight="@dimen/dimen4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_strok"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="@dimen/dimen16"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivC2"
                    android:layout_width="@dimen/dimen12"
                    android:layout_height="@dimen/dimen12"
                    android:src="@mipmap/triangle"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tvC2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen15"
                android:textColor="#333"
                android:singleLine="true"
                android:text=""
                android:padding="@dimen/dimen4"
                android:gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>