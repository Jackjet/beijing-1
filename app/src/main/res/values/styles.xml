<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="FormFieldsName2">
        <item name="android:textSize">@dimen/dimen14</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#e4e9ff</item>
        <item name="android:minHeight">@dimen/dimen36</item>
        <!--<item name="android:paddingTop">@dimen/dimen5</item>-->
        <!--<item name="android:paddingBottom">@dimen/dimen5</item>-->
    </style>
    <style name="FormFieldsValue2">
        <item name="android:textSize">@dimen/dimen14</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#f4f9ff</item>
        <item name="android:minHeight">@dimen/dimen36</item>
        <item name="android:padding">@dimen/dimen5</item>
        <!--<item name="android:paddingTop">@dimen/dimen5</item>-->
        <!--<item name="android:paddingBottom">@dimen/dimen5</item>-->
    </style>
    <style name="FormFieldsValue3">
        <item name="android:textSize">@dimen/dimen14</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#f4f9ff</item>
        <item name="android:minHeight">@dimen/dimen36</item>
        <!--<item name="android:paddingTop">@dimen/dimen5</item>-->
        <!--<item name="android:paddingBottom">@dimen/dimen5</item>-->
    </style>
    <style name="CommentListStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:minHeight">@dimen/dimen60</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">#f4f9ff</item>
    </style>
    <style name="dialog_custom" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">false</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">true</item> <!--背景是否模糊显示-->
    </style>
     <!--dialog底部弹出菜单动画-->
    <style name="bottom_menu_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>

    <style name="customProgressBar" parent="android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/bg</item>
    </style>

</resources>
